{
  "name": "artful/PoCMS",
  "description": "PoCMS是基于Polymer框架的内容管理系统",
  "license": "proprietary",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "artful/polymer": "dev-master",
    "artful/captcha": "dev-master",
    "artful/wechat": "dev-master"
  },
  "require-dev": {
    "satooshi/php-coveralls": "~1.0",
    "phpunit/phpunit": "~5.7",
    "facebook/webdriver": "~1.0",
    "mysql-workbench-schema-exporter/mysql-workbench-schema-exporter": "^3.0.0",
    "mysql-workbench-schema-exporter/doctrine2-exporter": "^3.0.0"
  },
  "bin": [
    "composer/bin/dbunit"
  ],
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "Entity\\": "entity\\",
      "WeiXin\\": "app\\WeiXin\\",
      "CMS\\": "app\\CMS\\",
      "Task\\": "task\\"
    }
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://packagist.phpcomposer.com"
    }
  }
}
